        \vspace*{6\p@}%
        %\parindent \z@ \reset@font%
        \par\nobreak%
    }
    \renewcommand{\chaptitlefont}{%
        \sffamily\huge%
    }
    \renewcommand{\chapnamefont}{}
    \renewcommand{\chapnumfont}{%
        \color{gray}\bfseries\LargeFont%
    }
